<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-header">
          Edit Note
        </div>
        <div class="card-body">
          <form action="/notes/edit/{{notes.id}}" method="POST">
            <div class="form-group">
              <label for="title" class="form-label">Title</label>
              <input type="text" value="{{notes.title}}" class="form-control" id="title" name="title" autofocus>
            </div>
            <div class="form-group">
              <label for="content" class="form-label">Content</label>
              <textarea name="content" class="form-control" rows="2" id="content" rows="3">{{notes.content}}</textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success" style="width: 100%; margin: 1em 0;">Submit</button>
            </div>
          
        </div>

        </form>
      </div>
    </div>
  </div>
</div>
</div>